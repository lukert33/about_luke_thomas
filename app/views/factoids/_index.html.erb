<div id="not-me">

  <h2>Not About Me</h2>

  <% quote_display = "<p class='quote-box'>\"#{@quote.excerpt}\"</p> <h4 class='quote-source'>#{@quote.source} <br><span class='byline'> by #{@quote.author}</span></h4>".html_safe %>

  <ul>
    <% if @flip == 0 %>
      <li><%= quote_display %> </li>
      <span class="separator"></span>
    <% end %>

    <% @ratios.each do |rat| %>
      <li>
        <p><span class="ratio-num"><%= rat.number %></span> : <%= rat.description %></p>
      </li>
      <span class="separator"></span>
    <% end %>

    <li>
      <p> Top Billboard Hit on <%= @song.month %>, <%= @song.day %>, <%= @song.year %> :<br><span class="songname">"<%= @song.track %>" by <%= @song.artist %></span></p>
    </li>

    <% if @flip == 1 %>
      <span class="separator"></span>
      <li><%= quote_display %> </li>
    <% end %>
  </ul>
</div>
